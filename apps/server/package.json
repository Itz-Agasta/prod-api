    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "mongodb": "^6.18.0",
    "mongoose": "^8.14.0",
    "winston": "^3.17.0",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "tsdown": "^0.12.9",
    "typescript": "^5.8.2",
    "@types/express": "^5.0.1",
    "@types/cors": "^2.8.17",
    "@types/bun": "^1.2.6"
